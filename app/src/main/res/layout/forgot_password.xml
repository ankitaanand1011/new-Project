<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:src="@mipmap/logo"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/txtview_forgot_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/img"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"


                />

            <TextView
                android:id="@+id/txtview_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your mail."
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/txtview_forgot_pass"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"


                />

            <RelativeLayout
                android:id="@+id/fpass_email_rl_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/txtview_note"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_bg_tv"
                >




                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:backgroundTint="@android:color/transparent"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHighlight="@color/colorPrimaryDark"
                        android:hint="Email" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/fpass_email_rl_email"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_bg_tv"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Submit"

                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    />
            </RelativeLayout>


        </RelativeLayout>


</RelativeLayout>